    "cors": "^2.8.5",
    "d3": "^7.8.4",
    "express": "^4.18.2",
    "madge": "^6.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.5"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
